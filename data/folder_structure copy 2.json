{
  "name": "project_root",
  "type": "folder",
  "description": "Root of the web application project",
  "children": {
    "frontend": {
      "type": "folder",
      "description": "Frontend application code",
      "children": {
        "framework": {
          "type": "folder",
          "description": "Frontend framework choice",
          "children": {
            "react": {
              "type": "folder",
              "description": "React-based frontend implementation",
              "required_when": "Frontend framework is React",
              "children": {
                "build_tool": {
                  "type": "folder",
                  "description": "Build tool for React",
                  "children": {
                    "vite": {
                      "type": "folder",
                      "description": "Vite build tooling for React",
                      "required_when": "Build tool is Vite",
                      "children": {
                        "src": {
                          "type": "folder",
                          "description": {
                            "purpose": "React application source code",
                            "files": {
                              "main.tsx": "Application entry point and React DOM mounting",
                              "App.tsx": "Root component composing providers and routes"
                            }
                          },
                          "children": {}
                        }
                      }
                    },
                    "webpack": {
                      "type": "folder",
                      "description": "Webpack-based React setup",
                      "required_when": "Build tool is Webpack",
                      "children": {}
                    }
                  }
                }
              }
            },
            "vue": {
              "type": "folder",
              "description": "Vue.js frontend implementation",
              "required_when": "Frontend framework is Vue",
              "children": {}
            }
          }
        },

        "routing": {
          "type": "folder",
          "description": "Client-side routing strategy",
          "children": {
            "react_router": {
              "type": "folder",
              "description": "React Router based routing",
              "required_when": "Routing uses React Router",
              "children": {
                "routes": {
                  "type": "folder",
                  "description": {
                    "purpose": "Route definitions and guards",
                    "files": {
                      "AppRoutes.tsx": "Defines application routes",
                      "ProtectedRoute.tsx": "Handles route-level authentication"
                    }
                  },
                  "children": {}
                }
              }
            },
            "file_based": {
              "type": "folder",
              "description": "File-based routing",
              "required_when": "Routing uses file-based strategy",
              "children": {}
            }
          }
        },

        "state_management": {
          "type": "folder",
          "description": "Global state management strategy",
          "children": {
            "redux": {
              "type": "folder",
              "description": "Redux Toolkit based state management",
              "required_when": "State management is Redux",
              "children": {
                "store": {
                  "type": "folder",
                  "description": {
                    "purpose": "Redux store configuration",
                    "files": {
                      "store.ts": "Creates and configures Redux store",
                      "rootReducer.ts": "Combines application reducers"
                    }
                  },
                  "children": {}
                }
              }
            },
            "zustand": {
              "type": "folder",
              "description": "Zustand based lightweight state management",
              "required_when": "State management is Zustand",
              "children": {}
            },
            "context_only": {
              "type": "folder",
              "description": "React Context API only",
              "required_when": "Only React Context is used",
              "children": {}
            }
          }
        },

        "styling": {
          "type": "folder",
          "description": "Styling solution",
          "children": {
            "css_modules": {
              "type": "folder",
              "description": "CSS Modules based styling",
              "required_when": "Styling uses CSS Modules",
              "children": {
                "styles": {
                  "type": "folder",
                  "description": {
                    "purpose": "Scoped component styles",
                    "files": {
                      "App.module.css": "Scoped styles for App component"
                    }
                  },
                  "children": {}
                }
              }
            },
            "tailwind": {
              "type": "folder",
              "description": "Tailwind CSS utility-first styling",
              "required_when": "Styling uses Tailwind CSS",
              "children": {}
            }
          }
        }
      }
    },

    "backend": {
      "type": "folder",
      "description": "Backend application code",
      "children": {
        "runtime": {
          "type": "folder",
          "description": "Backend runtime environment",
          "children": {
            "node": {
              "type": "folder",
              "description": "Node.js backend",
              "required_when": "Backend runtime is Node.js",
              "children": {
                "framework": {
                  "type": "folder",
                  "description": "Backend framework choice",
                  "children": {
                    "express": {
                      "type": "folder",
                      "description": "Express.js framework",
                      "required_when": "Backend framework is Express",
                      "children": {
                        "src": {
                          "type": "folder",
                          "description": {
                            "purpose": "Backend source code",
                            "files": {
                              "server.ts": "Application entry point",
                              "routes.ts": "API route definitions"
                            }
                          },
                          "children": {}
                        }
                      }
                    },
                    "fastify": {
                      "type": "folder",
                      "description": "Fastify framework",
                      "required_when": "Backend framework is Fastify",
                      "children": {}
                    }
                  }
                }
              }
            },
            "django": {
              "type": "folder",
              "description": "Django backend (Python)",
              "required_when": "Backend runtime is Python",
              "children": {}
            }
          }
        }
      }
    },

    "deployment": {
      "type": "folder",
      "description": "Deployment strategy",
      "children": {
        "docker": {
          "type": "folder",
          "description": "Docker-based deployment",
          "required_when": "Deployment uses Docker",
          "children": {
            "docker_files": {
              "type": "folder",
              "description": {
                "purpose": "Docker configuration files",
                "files": {
                  "Dockerfile": "Build instructions for container image",
                  "docker-compose.yml": "Local multi-container setup"
                }
              },
              "children": {}
            }
          }
        },
        "serverless": {
          "type": "folder",
          "description": "Serverless deployment",
          "required_when": "Deployment is serverless",
          "children": {}
        }
      }
    }
  }
}
